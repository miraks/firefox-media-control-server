{
  "extends": "airbnb-base",
  "env": {
    "node": true
  },
  "rules": {
    "semi": ["error", "never"],
    "max-len": "off",
    "comma-dangle": ["error", "never"],
    "consistent-return": "off",
    "no-use-before-define": "off",
    "no-confusing-arrow": "off",
    "arrow-parens": ["error", "always"],
    "no-param-reassign": "off"
  }
}
